@model SC_701_PAW_Lunes.Models.Inventory

<div class="container text-center">
    <h2 class="text-danger">¿Estás seguro de que quieres eliminar este zapato?</h2>

    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Id Categoria:</strong> @Model.Id_Cat</p>
    <p><strong>Marca:</strong> @Model.Marca</p>
    <p><strong>Precio:</strong> $@Model.Precio</p>

    <form method="post" action="@Url.Action("EliminarConfirmado", new { id = Model.Id_Inv })">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
