@using SC_701_PAW_Lunes.Models
@model IEnumerable<User>

<h1>Gestión de Usuarios</h1>

<a asp-action="Create" class="btn btn-primary">Crear Usuario</a>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Nombre de Usuario</th>
            <th>Nombre Completo</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Rol</th>
            <th>Fecha Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.NombreCompleto</td>
                <td>@user.Email</td>
                <td>@user.Telefono</td>
                <td>@user.Rol</td>
                <td>@user.FechaRegistro.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
