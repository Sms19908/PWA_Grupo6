@using SC_701_PAW_Lunes.Models
@model User

<h1>Crear Usuario</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control bg-dark text-white" />
    </div>
    <div class="form-group">
        <label asp-for="NombreCompleto"></label>
        <input asp-for="NombreCompleto" class="form-control bg-dark text-white" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control bg-dark text-white" />
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control bg-dark text-white" />
    </div>
    <div class="form-group">
        <label for="password">Contraseña</label>
        <input id="password" name="password" type="password" class="form-control bg-dark text-white" />
    </div>
    <div class="form-group">
        <label asp-for="Rol"></label>
        <select asp-for="Rol" class="form-control bg-dark text-white">
            @foreach (var rol in ViewBag.Roles as List<string>)
            {
                <option value="@rol">@rol</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>